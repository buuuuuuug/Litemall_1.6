<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oolitemall.collection.mapper.CollectMapper">


    <insert id="addCollect" parameterType="com.oolitemall.collection.domain.CollectItem" useGeneratedKeys="true" keyProperty="id">
        insert into collect_item(goods_id,user_id,gmt_create,gmt_modified) values(#{goodsId},#{userId},#{gmtCreate},#{gmtModified});
    </insert>

    <delete id="deleteCollectById" parameterType="Integer">
        delete from collect_item where id =#{id};
    </delete>

    <select id="listCollectByCodition" resultType="com.oolitemall.collection.domain.CollectItem" parameterType="String">
        select * from collect_item;
    </select>
</mapper>